<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokeApp.Pages.LogItemDetailPage" Title="{Binding CurrentLogItem.Pokemon.Name}">
    <StackLayout>
        <Image Source="{Binding CurrentLogItem.CaughtBy.ImageUrl}" VerticalOptions="Center" HorizontalOptions="Center"></Image>
        <Label Text="{Binding CurrentLogItem.Description}" VerticalOptions="Center" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>