<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokeApp.Pages.AddLogItemPage" Title="Add log entry">
    <StackLayout Margin="10">
        <Label>Pokemon</Label>
        <Label Text="{Binding SelectedPokemon.Name}"></Label>
        <Button Text="Pick Pokemon" Command="{Binding PickPokemonCommand}"></Button>

        <Label>User</Label>
        <Label>Gerald V.</Label>

        <Label>Caught at</Label>
        <DatePicker Date="{Binding CaughtAt}"></DatePicker>

        <Button Text="Save" Command="{Binding SaveLogEntryCommand}"></Button>
    </StackLayout>
</ContentPage>