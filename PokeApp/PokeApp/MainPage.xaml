             xmlns:local="clr-namespace:PokeApp"
             x:Class="PokeApp.MainPage">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Button Text="Get token" Clicked="Button_OnClicked"></Button>
        <Button Text="Make secure call" Clicked="Button1_OnClicked"></Button>
        <Button Text="Erase settings" Clicked="Button2_OnClicked"></Button>
